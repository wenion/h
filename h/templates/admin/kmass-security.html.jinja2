{% extends "h:templates/layouts/admin.html.jinja2" %}

{% set page_id = 'security' %}
{% set page_title = 'Access Strategy' %}

{% block content %}
  <p>
    On this page you add or delete the item of the whitelist and blacklist.
  </p>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Whitelist</h3>
    </div>
    <div class="panel-body">
      <form method="POST" class="form-inline list-gap">
        <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
          <label for="add">URL</label>
          <input type="text" class="form-control" name="add">
        </div>
        <div class="form-group">
          <label for="methodology">Type</label>
          <select id="methodology" name="methodology" class="form-control" value="domain">
          {% for item  in options %}
          <div>{{ value }}</div>
          <option
            value={{ item["value"] }}>{{ item["description"] }}</option>
          {% endfor %}
          </select>
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-default" value="Add">
        </div>
      </form>
    </div>
  </div>

  <div class="list-top">
  <a href="https://medium.com/@joseph.pyram/9-parts-of-a-url-that-you-should-know-89fea8e11713#:~:text=The%209%20parts%20of%20a,query%2C%20parameters%2C%20and%20fragment.">TYPE</a><br/>
  e.g., lms.monash.edu:8001/my/couses<br/>
  domain: monash.edu<br>
  hostname: lms.monash.edu<br/>
  host: lms.monash.edu:8001<br/>
  subdirectory: lms.monash.edu:8001/my<br/>
  </div>

  <div class="panel panel-default">
    <div class="list-top">
      <form
        method="POST"
        action="{{ request.route_url('admin.security') }}">
        <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>URL</th>
                <th>MATCH STRING</th>
                <th>TYPE</th>
                <th>ACTION</th>
              </tr>
            </thead>
            <tbody>
              {% for user in whitelist %}
                <tr>
                  <td>
                    {{ user.name }}
                  </td>
                  <td>
                    {{ user.URL }}
                  </td>
                  <td>
                    {{ user.match }}
                  </td>
                  <td>
                    {{ user.type }}
                  </td>
                  <td>
                    <button type="submit" class="btn btn-link btn-sm"
                            name="remove" value="{{ user }}">
                      Remove
                    </button>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </form>
    </div>
  </div>

  <hr />

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Blacklist</h3>
    </div>
    <div class="panel-body">
      <form method="POST" class="form-inline list-gap">
        <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
          <label for="add">Category</label>
          <input type="text" class="form-control" name="add">
        </div>
        <div class="form-group">
          <label for="methodology">Type</label>
          <input type="text" class="form-control" name="methodology" value="blacklist">
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-default" value="Add">
        </div>
      </form>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="list-top">
      <form
        method="POST"
        action="{{ request.route_url('admin.security') }}">
        <input type="hidden" name="csrf_token" value="{{ get_csrf_token() }}">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Category</th>
                <th>TYPE</th>
                <th>ACTION</th>
              </tr>
            </thead>
            <tbody>
              {% for user in blacklist %}
                <tr>
                  <td>
                    {{ user.name }}
                  </td>
                  <td>
                    {{ user.Category }}
                  </td>
                  <td>
                    {{ user.type }}
                  </td>
                  <td>
                    <button type="submit" class="btn btn-link btn-sm"
                            name="remove" value="{{ user }}">
                      Remove
                    </button>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
