{% extends "h:templates/layouts/admin.html.jinja2" %}

{% set page_id = 'organizations_edit' %}
{% set page_title = 'Edit organisation event' %}

{% block content %}
  {{ form }}
  <div>
    <h3> Message Preview </h3>
    <hr/>
    {{ markdown | safe }}
    <hr/>
  </div>
  {% if delete_url %}
    <form method="POST" action="{{ delete_url }}">
      <button class="btn btn--danger js-confirm-submit"
              data-confirm-message="Are you sure you want to delete this organization?">Delete</button>
    </form>
  {% endif %}
{% endblock %}
